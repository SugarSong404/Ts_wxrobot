#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --no-warnings --loader ts-node/esm "$basedir/../wechaty/dist/esm/bin/io-client.js" "$@"
else 
  exec node --no-warnings --loader ts-node/esm "$basedir/../wechaty/dist/esm/bin/io-client.js" "$@"
fi
